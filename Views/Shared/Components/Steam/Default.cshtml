@model Steam.Models.SteamPlayer.PlayerAchievementResultModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Default</title>
</head>
<body>
    @if (Model.Success)
    {

        <h2>@Html.DisplayFor(model => model.GameName) Achievements</h2>
        <dl class="row">
            @foreach (var item in Model.Achievements)
            {
                @if (item.Achieved == 0)
                {
                    <dt class="col-sm-3">
                        @Html.DisplayFor(model => item.Name)
                    </dt>
                }
            }
        </dl>
    } else
    {
        <h2>Choose a public steam account</h2>
    }

</body>
</html>

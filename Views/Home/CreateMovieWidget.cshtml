@model DEV_dashboard_2019.Models.WidgetConf.MovieWidgetConf

@{
    ViewData["Title"] = "Create Movie Widget";
}

<h1>@ViewData["Title"]</h1>

<h4>Configuration</h4>
<hr />
    <div class="col-md-4">
        <form asp-action="CreateMovieWidget">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Search" class="control-label"></label>
                <input asp-for="Search" class="form-control" />
                <span asp-validation-for="Search" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" value="0"/>
                <span asp-validation-for="Search" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Widget" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to Dashboard</a>
        </div>
</div>
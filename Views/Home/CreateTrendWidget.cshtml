@model DEV_dashboard_2019.Models.WidgetConf.TrendWidgetConf

@{
    ViewData["Title"] = "Create Trend Widget";
}

<h1>@ViewData["Title"]</h1>

<h4>Configuration</h4>
<hr />
<div class="col-md-4">
    <form asp-action="CreateTrendWidget">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">
            <label asp-for="Media" class="control-label"></label>
            <select asp-for="Media" class="form-control">
                <option value="movie">Movies</option>
                <option value="tv">TV shows</option>
            </select>
            <span asp-validation-for="Media" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Time" class="control-label"></label>
            <select asp-for="Time" class="form-control">
                <option value="day">Day</option>
                <option value="week">Week</option>
            </select>
            <span asp-validation-for="Time" class="text-danger"></span>
        </div>
        <div class="form-group">
            <input type="submit" value="Create Widget" class="btn btn-primary" />
        </div>
    </form>
    <div>
        <a asp-action="Widget">Back to Dashboard</a>
    </div>
</div>
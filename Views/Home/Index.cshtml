@{
    ViewData["Title"] = "DASHBOARD";
}

<h2 class="display-4">My Dashboard</h2>
<p>Welcome to you who have come</p>

<form asp-controller="Home" asp-action="Index" method="get">
    <div class="row">
        <div class="col-md-4">
            <input type="text" name="username" class="form-control" placeholder="Enter steam username">
        </div>
        <div class="form-group">
            <input type="submit" value="Achievements" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    @await Component.InvokeAsync("Steam", ViewData["username"])
</div>
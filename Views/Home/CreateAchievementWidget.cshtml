@model DEV_dashboard_2019.Models.AchievementWidgetConf

@{
    ViewData["Title"] = "Create Achievement Widget";
}

<h1>@ViewData["Title"]</h1>

<h4>Configuration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateAchievementWidget">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppId" class="control-label"></label>
                <input asp-for="AppId" class="form-control" />
                <span asp-validation-for="AppId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Widget" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Widget">Back to Dashboard</a>
        </div>
    </div>
    <div class="col-md-6 text-center">
        <h3>Get your game ID on Steam Database (image is link)</h3>
        <a href="https://steamdb.info/apps/" target="_blank">
            <img src="https://steamuserimages-a.akamaihd.net/ugc/716415125932674174/336A9D46E1585B1E06915425CA343E8841BB3C16/" style="width:200px;height:250px;" alt="Steam Db"/>
        </a>
    </div>
</div>
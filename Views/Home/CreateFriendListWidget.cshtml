@model DEV_dashboard_2019.Models.FriendListWidgetConf

@{
    ViewData["Title"] = "Create Friend List Widget";
}

<h1>@ViewData["Title"]</h1>

<h4>Configuration</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateFriendListWidget">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username" class="control-label"></label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create Widget" class="btn btn-primary" />
            </div>
        </form>
        <div>
            <a asp-action="Index">Back to Dashboard</a>
        </div>
    </div>
</div>